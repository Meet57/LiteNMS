<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name="struts.devMode" value="true" />

    <package name="action" extends="json-default" namespace="/">

        <action name="">
            <result>/index.html</result>
        </action>

<!--        Discovery Actions-->
        <action name="getDiscoveryDevices" class="action.DiscoveryAction" method="get">
            <result name="success" type="json" />
        </action>
        <action name="deleteDiscoveryDevice" class="action.DiscoveryAction" method="delete">
            <result name="success" type="json" />
        </action>
        <action name="addDiscoveryDevice" class="action.DiscoveryAction" method="add">
            <result name="success" type="json" />
        </action>
        <action name="updateDiscoveryDevice" class="action.DiscoveryAction" method="update">
            <result name="success" type="json" />
        </action>


    </package>
</struts>
