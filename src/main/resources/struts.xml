<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
<!--    <constant name="struts.devMode" value="true" />-->
    <constant name="struts.action.excludePattern" value=".*\/websocket\/.*"/>

    <package name="Start" namespace="/" extends="struts-default">
        <interceptors>
            <interceptor name="userSession" class="helper.MyInterceptor" />
        </interceptors>

        <action name="login">
            <result>/login.html</result>
        </action>
    </package>

    <package name="Main" extends="json-default,struts-default">

        <result-types>
            <result-type name="json" class="org.apache.struts2.json.JSONResult">
                <param name="noCache">true</param>
                <param name="excludeNullProperties">true</param>
                <param name="enableGZIP">true</param>
            </result-type>
        </result-types>

        <interceptors>
            <interceptor name="userSession" class="helper.MyInterceptor" />
            <interceptor-stack name="loginSession">
                <interceptor-ref name="userSession"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
        </interceptors>

        <global-results>
            <result name="login" type="redirect">/login.html</result>
        </global-results>


        <action name="">
            <interceptor-ref name="loginSession"/>
            <result>/index.html</result>
        </action>

<!--        Authentication-->
        <action name="authenticate" class="action.LoginAction" method="login">
            <result name="success" type="json" />
        </action>
        <action name="logout" class="action.LoginAction" method="logout">
            <result name="success" type="json" />
        </action>

<!--        Discovery Actions-->
        <action name="getDiscoveryDevices" class="action.DiscoveryAction" method="get">
            <interceptor-ref name="loginSession"/>
            <result name="success" type="json" />
        </action>
        <action name="getSingleDiscoveryDevice" class="action.DiscoveryAction" method="monitor">
            <interceptor-ref name="loginSession"/>
            <result name="success" type="json" />
        </action>
        <action name="deleteDiscoveryDevice" class="action.DiscoveryAction" method="delete">
            <interceptor-ref name="loginSession"/>
            <result name="success" type="json" />
        </action>
        <action name="addDiscoveryDevice" class="action.DiscoveryAction" method="add">
            <interceptor-ref name="loginSession"/>
            <result name="success" type="json" />
        </action>
        <action name="updateDiscoveryDevice" class="action.DiscoveryAction" method="update">
            <interceptor-ref name="loginSession"/>
            <result name="success" type="json" />
        </action>

<!--        Provision-->
        <action name="checkProvision" class="action.PollingAction" method="discovery">
            <interceptor-ref name="loginSession"/>
            <result name="success" type="json" />
        </action>
        <action name="putProvision" class="action.PollingAction" method="put">
            <interceptor-ref name="loginSession"/>
            <result name="success" type="json" />
        </action>

<!--        Monitor-->
        <action name="getMonitorDevices" class="action.MonitorAction" method="get">
            <interceptor-ref name="loginSession"/>
            <result name="success" type="json" />
        </action>
        <action name="deleteMonitorDevice" class="action.MonitorAction" method="delete">
            <interceptor-ref name="loginSession"/>
            <result name="success" type="json" />
        </action>

<!--        Metric Data-->
        <action name="getMetrics" class="action.MetricAction" method="get">
            <interceptor-ref name="loginSession"/>
            <result name="success" type="json" />
        </action>

        <action name="deviceStatus" class="action.MetricAction" method="deviceStatus">
            <interceptor-ref name="loginSession"/>
            <result name="success" type="json" />
        </action>

<!--        Dashboard data-->
        <action name="getDashboard" class="action.DashboardAction" method="get">
            <interceptor-ref name="loginSession"/>
            <result name="success" type="json" />
        </action>

    </package>
</struts>
