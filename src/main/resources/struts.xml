<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
<!--    <constant name="struts.devMode" value="true" />-->
    <constant name="struts.action.excludePattern" value=".*\/websocket\/.*"/>

    <package name="action" extends="json-default" namespace="/">

        <action name="">
            <result>/index.html</result>
        </action>

<!--        Authentication-->
        <action name="login" class="action.AuthenticationAction" method="login">
            <result name="success" type="json" />
        </action>

<!--        Discovery Actions-->
        <action name="getDiscoveryDevices" class="action.DiscoveryAction" method="get">
            <result name="success" type="json" />
        </action>
        <action name="getSingleDiscoveryDevice" class="action.DiscoveryAction" method="monitor">
            <result name="success" type="json" />
        </action>
        <action name="deleteDiscoveryDevice" class="action.DiscoveryAction" method="delete">
            <result name="success" type="json" />
        </action>
        <action name="addDiscoveryDevice" class="action.DiscoveryAction" method="add">
            <result name="success" type="json" />
        </action>
        <action name="updateDiscoveryDevice" class="action.DiscoveryAction" method="update">
            <result name="success" type="json" />
        </action>

<!--        Provision-->
        <action name="checkProvision" class="action.PollingAction" method="discovery">
            <result name="success" type="json" />
        </action>
        <action name="putProvision" class="action.PollingAction" method="put">
            <result name="success" type="json" />
        </action>

<!--        Monitor-->
        <action name="getMonitorDevices" class="action.MonitorAction" method="get">
            <result name="success" type="json" />
        </action>
        <action name="deleteMonitorDevice" class="action.MonitorAction" method="delete">
            <result name="success" type="json" />
        </action>

<!--        Metric Data-->
        <action name="getMetrics" class="action.MetricAction" method="get">
            <result name="success" type="json" />
        </action>

    </package>
</struts>
